{
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["ESNext"],
    "types": ["node"],
    "noEmit": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "paths": {
      "esbuild-plugin-metadata-injector/placeholder": [
        "./esbuild-plugin-metadata-injector/placeholder"
      ]
    }
  },
  "include": ["src/**/*"]
}
